%div{ class: 'product-grid' }
  - @products.map do |product|
    %article{ class: 'product-block' }
      %a{ href: collection_product_path(collection_type: @smart_collection.handle, guid: product.id) }
        %div{ class: 'image-container' }
          %img{ src: product.images.last.src }
      %div{ class: 'details' }
        %a{ href: collection_product_path(collection_type: @smart_collection.handle, guid: product.id) }
          %div{ class: 'title' }=product.title
        %a{ href: collection_product_path(collection_type: @smart_collection.handle, guid: product.id) }
          %div{ class: 'price' }="$ #{product.variants.map(&:price).sample}"
